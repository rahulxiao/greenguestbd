{
  "info": {
    "name": "GreenGuest Order API",
    "description": "Collection for testing Order module endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Place Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"items\": [\n    {\n      \"productId\": 1,\n      \"quantity\": 2\n    },\n    {\n      \"productId\": 2,\n      \"quantity\": 1\n    }\n  ],\n  \"address\": \"123 Main St, City, State 12345\",\n  \"paymentMethod\": \"credit_card\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/orders/placeOrder?userId=1",
          "host": ["{{baseUrl}}"],
          "path": ["orders", "placeOrder"],
          "query": [
            {
              "key": "userId",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "name": "Get User Orders",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/orders/getUserOrders?userId=1",
          "host": ["{{baseUrl}}"],
          "path": ["orders", "getUserOrders"],
          "query": [
            {
              "key": "userId",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "name": "Get All Orders (Admin)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/orders/getAllOrders",
          "host": ["{{baseUrl}}"],
          "path": ["orders", "getAllOrders"]
        }
      }
    },
    {
      "name": "Get Order by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/orders/getOrderById/1",
          "host": ["{{baseUrl}}"],
          "path": ["orders", "getOrderById", "1"]
        }
      }
    },
    {
      "name": "Update Order Status (Admin)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"shipped\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/orders/updateOrderStatus/1",
          "host": ["{{baseUrl}}"],
          "path": ["orders", "updateOrderStatus", "1"]
        }
      }
    },
    {
      "name": "Delete Order (Admin)",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/orders/deleteOrder/1",
          "host": ["{{baseUrl}}"],
          "path": ["orders", "deleteOrder", "1"]
        }
      }
    },
    {
      "name": "Get Orders by Status (Admin)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/orders/getOrdersByStatus?status=pending",
          "host": ["{{baseUrl}}"],
          "path": ["orders", "getOrdersByStatus"],
          "query": [
            {
              "key": "status",
              "value": "pending"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ]
} 