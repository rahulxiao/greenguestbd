{
  "info": {
    "name": "GreenGuest Wishlist API",
    "description": "Collection for testing Wishlist module endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add to Wishlist",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productId\": 1\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/wishlist/addToWishlist?userId=1",
          "host": ["{{baseUrl}}"],
          "path": ["wishlist", "addToWishlist"],
          "query": [
            {
              "key": "userId",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "name": "Get User Wishlist",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/wishlist/getUserWishlist?userId=1",
          "host": ["{{baseUrl}}"],
          "path": ["wishlist", "getUserWishlist"],
          "query": [
            {
              "key": "userId",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "name": "Remove from Wishlist",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/wishlist/removeFromWishlist/1?userId=1",
          "host": ["{{baseUrl}}"],
          "path": ["wishlist", "removeFromWishlist", "1"],
          "query": [
            {
              "key": "userId",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "name": "Clear User Wishlist",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/wishlist/clearUserWishlist?userId=1",
          "host": ["{{baseUrl}}"],
          "path": ["wishlist", "clearUserWishlist"],
          "query": [
            {
              "key": "userId",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "name": "Get All Wishlists (Admin)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/wishlist/getAllWishlists",
          "host": ["{{baseUrl}}"],
          "path": ["wishlist", "getAllWishlists"]
        }
      }
    },
    {
      "name": "Get Wishlist by User ID (Admin)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/wishlist/getWishlistByUserId?userId=1",
          "host": ["{{baseUrl}}"],
          "path": ["wishlist", "getWishlistByUserId"],
          "query": [
            {
              "key": "userId",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "name": "Check Product in Wishlist",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/wishlist/checkProductInWishlist?userId=1&productId=1",
          "host": ["{{baseUrl}}"],
          "path": ["wishlist", "checkProductInWishlist"],
          "query": [
            {
              "key": "userId",
              "value": "1"
            },
            {
              "key": "productId",
              "value": "1"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3333"
    }
  ]
} 